<UserControl x:Class="dockus.Dock.Controls.SystemInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            x:Name="Notifications"
            Padding="3"
            Grid.Row="0"
            Grid.Column="0"
            BorderBrush="DarkGray"
            Height="18"
            Width="18"
            BorderThickness="0.2"
            CornerRadius="4"
            Background="Black"
            Cursor="Hand"
            MouseLeftButtonUp="Notifications_MouseLeftButtonUp">
            <ContentControl Content="{StaticResource Notification}" />
        </Border>

        <Border
            Cursor="Hand"
            x:Name="Configuration"
            Padding="3"
            Grid.Row="0"
            Grid.Column="1"
            BorderBrush="DarkGray"
            Height="18"
            Width="18"
            BorderThickness="0.2"
            CornerRadius="4"
            Background="Black"
            MouseLeftButtonUp="Configuration_MouseLeftButtonUp">
            <ContentControl Content="{StaticResource SettingsIcon}" />
        </Border>

        <Border
            x:Name="SystemTray"
            Grid.Row="0"
            Padding="3"
            Grid.Column="2"
            BorderBrush="DarkGray"
            Height="18"
            Width="18"
            BorderThickness="0.2"
            CornerRadius="4"
            Background="Black"
            MouseLeftButtonUp="SystemTray_MouseLeftButtonUp"
            Cursor="Hand">
            <ContentControl Content="{StaticResource SystemTray}" />
        </Border>

        <Border
            x:Name="TimeDay"
            Margin="1"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            BorderBrush="DarkGray"
            Height="16"
            Width="64"
            BorderThickness="0.2"
            CornerRadius="4"
            Background="Black">
            <TextBlock 
                x:Name="ClockText" 
                Foreground="White" 
                FontSize="10" 
                HorizontalAlignment="Center"/>
        </Border>

        <Border
            x:Name="Battery"
            Grid.Row="2"
            Grid.Column="0"
            Margin="1"
            Grid.ColumnSpan="3"
            BorderBrush="DarkGray"
            Height="16"
            Width="64"
            BorderThickness="0.2"
            CornerRadius="4"
            Background="Black">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock 
                    x:Name="BatteryPercentText" 
                    Text="%" 
                    Foreground="White" 
                    FontSize="10" 
                    VerticalAlignment="Center"
                    Margin="0,0,4,0"/>
                <ContentControl x:Name="BatteryIconControl" Content="{StaticResource Battery}"/>
            </StackPanel>
        </Border>

        <Popup x:Name="TrayPopup"
               PlacementTarget="{Binding ElementName=SystemTray}"
               Placement="Top"
               VerticalOffset="-10"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide">
            <Border Background="#CC1E1E1E"
                    CornerRadius="6"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="8">
                <StackPanel>
                    <TextBlock Text="System Tray"
                               Foreground="White"
                               FontSize="12"/>
                    <TextBlock Text="Still in development"
                               Foreground="LightGray"
                               FontSize="10"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>