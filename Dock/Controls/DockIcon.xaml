<UserControl x:Class="dockus.Dock.Controls.DockIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:dockus.Core.Converters">
    <UserControl.Resources>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
    </UserControl.Resources>

    <Grid ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="62"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="MouseStates">
                <VisualState x:Name="Normal">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="IconBlock" Storyboard.TargetProperty="Width" To="52" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="IconBlock" Storyboard.TargetProperty="Height" To="52" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="IconImage" Storyboard.TargetProperty="Width" To="36" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="IconImage" Storyboard.TargetProperty="Height" To="36" Duration="0:0:0.2"/>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="MouseOver">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="IconBlock" Storyboard.TargetProperty="Width" To="60" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="IconBlock" Storyboard.TargetProperty="Height" To="60" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="IconImage" Storyboard.TargetProperty="Width" To="44" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="IconImage" Storyboard.TargetProperty="Height" To="44" Duration="0:0:0.2"/>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Border
            x:Name="IconBlock"
            MouseRightButtonUp="IconBlock_MouseRightButtonUp"
            MouseLeftButtonUp="Icon_MouseLeftButtonUp" 
            VerticalAlignment="Center" 
            Width="52" 
            Height="52"
            MouseEnter="IconBlock_MouseEnter"
            MouseLeave="IconBlock_MouseLeave"
            Background="#AA292929" 
            CornerRadius="10" 
            Margin="3,0">
            <Image 
                x:Name="IconImage"
                Width="36" 
                Height="36" 
                Source="{Binding Icon}" 
                Cursor="Hand"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
                <Image.ToolTip>
                    <ToolTip Content="{Binding Title}" />
                </Image.ToolTip>
            </Image>
        </Border>

        <Rectangle 
            Grid.Row="1"
            Width="12" 
            Height="3" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center" 
            Margin="2,0" 
            RadiusX="2" 
            RadiusY="2"
            Fill="{Binding IsRunning, Converter={StaticResource BoolToBrushConverter}}" />
    </Grid>
</UserControl>