<Window x:Class="dockus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:local="clr-namespace:dockus"
        xmlns:converters="clr-namespace:dockus.Core.Converters"
        WindowStyle="None"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Dockus" 
        Height="75"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SizeChanged="Window_SizeChanged"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        >

    <Window.Resources>
        <converters:MultiBoolToVisibilityConverter x:Key="MultiBoolToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
    </Window.Resources>

    <Border x:Name="MainBorder" Background="#000000" BorderBrush="#FF4A4A4A" BorderThickness="1" CornerRadius="24" Padding="15,5">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center">
            <StackPanel Orientation="Horizontal">

                <ItemsControl ItemsSource="{Binding PinnedItems}"
                              dd:DragDrop.IsDragSource="True"
                              dd:DragDrop.IsDropTarget="True"
                              dd:DragDrop.UseDefaultDragAdorner="True"
                              dd:DragDrop.DropHandler="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="56" Height="56">
                                <Image Width="48" Height="48" Source="{Binding Icon}" Cursor="Hand"
                                       MouseLeftButtonUp="Icon_MouseLeftButtonDown"
                                       VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image.ToolTip>
                                        <ToolTip Content="{Binding Title}" />
                                    </Image.ToolTip>
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Anclar a la barra" Click="Pin_Click" Visibility="{Binding IsPinned, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <MenuItem Header="Desanclar de la barra" Click="Unpin_Click" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>
                                <Rectangle Width="24" Height="3" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                           Margin="0,0,2,2" 
                                           RadiusX="2" RadiusY="2">
                                    <Rectangle.Fill>
                                        <Binding Path="IsRunning" Converter="{StaticResource BoolToBrushConverter}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Width="6" Margin="8,4" CornerRadius="2" Background="#90A1B9" BorderBrush="#FF4A4A4A" BorderThickness="1,0,1,0">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ocultar barra" Click="ToggleBar_Click"/>
                            <MenuItem Header="Configuración" Click="OpenSettings_Click"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>

                <ItemsControl ItemsSource="{Binding ActiveUnpinnedItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="56" Height="56">
                                <Image Width="48" Height="48" Source="{Binding Icon}" Cursor="Hand"
                                       MouseLeftButtonDown="Icon_MouseLeftButtonDown"
                                       VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image.ToolTip>
                                        <ToolTip Content="{Binding Title}" />
                                    </Image.ToolTip>
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Anclar a la barra" Click="Pin_Click" Visibility="{Binding IsPinned, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <MenuItem Header="Desanclar de la barra" Click="Unpin_Click" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>
                                <Rectangle Width="24" Height="3" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                           Margin="0,0,2,2"
                                           RadiusX="2" RadiusY="2">
                                    <Rectangle.Fill>
                                        <Binding Path="IsRunning" Converter="{StaticResource BoolToBrushConverter}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>