<Window x:Class="dockus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:local="clr-namespace:dockus"
        xmlns:converters="clr-namespace:dockus.Core.Converters"
        xmlns:core="clr-namespace:dockus.Core.Models"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        WindowStyle="None"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Dockus" 
        Height="75"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SizeChanged="Window_SizeChanged"
        SourceInitialized="Window_SourceInitialized"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        ShowInTaskbar="False"
        >

    <Window.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <converters:MultiBoolToVisibilityConverter x:Key="MultiBoolToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
    </Window.Resources>

    <Border x:Name="MainBorder" BorderBrush="#FF4A4A4A" BorderThickness="1" CornerRadius="24" Padding="15,5"
            Background="{Binding Source={x:Static core:AppSettings.Current}, Path=DockBackground, Converter={StaticResource ColorToBrushConverter}}"
            >
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center">
            <StackPanel Orientation="Horizontal">

                <ItemsControl ItemsSource="{Binding PinnedItems}"
                              dd:DragDrop.IsDragSource="True"
                              dd:DragDrop.IsDropTarget="True"
                              dd:DragDrop.UseDefaultDragAdorner="True"
                              dd:DragDrop.DropHandler="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="56" Height="56">
                                <Image Width="48" Height="48" Source="{Binding Icon}" Cursor="Hand"
                                       MouseLeftButtonUp="Icon_MouseLeftButtonDown"
                                       VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image.ToolTip>
                                        <ToolTip Content="{Binding Title}" />
                                    </Image.ToolTip>
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Anclar a la barra" Click="Pin_Click" Visibility="{Binding IsPinned, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <MenuItem Header="Desanclar de la barra" Click="Unpin_Click" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>
                                <Rectangle Width="24" Height="3" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                           Margin="0,0,2,2" 
                                           RadiusX="2" RadiusY="2">
                                    <Rectangle.Fill>
                                        <Binding Path="IsRunning" Converter="{StaticResource BoolToBrushConverter}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Width="6" Margin="8,16" CornerRadius="2" Background="#262626" BorderThickness="1,0,1,0">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ocultar barra" Click="ToggleBar_Click"/>
                            <MenuItem Header="Configuración" Click="OpenSettings_Click"/>
                            <MenuItem Header="Close" Click="Exit_Click"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>

                <ItemsControl ItemsSource="{Binding ActiveUnpinnedItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="56" Height="56">
                                <Image Width="48" Height="48" Source="{Binding Icon}" Cursor="Hand"
                                       MouseLeftButtonDown="Icon_MouseLeftButtonDown"
                                       VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image.ToolTip>
                                        <ToolTip Content="{Binding Title}" />
                                    </Image.ToolTip>
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Anclar a la barra" Click="Pin_Click" Visibility="{Binding IsPinned, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <MenuItem Header="Desanclar de la barra" Click="Unpin_Click" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>
                                <Rectangle Width="24" Height="3" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                           Margin="0,0,2,2"
                                           RadiusX="2" RadiusY="2">
                                    <Rectangle.Fill>
                                        <Binding Path="IsRunning" Converter="{StaticResource BoolToBrushConverter}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Width="6" Margin="8,16" CornerRadius="2" Background="#262626" BorderThickness="1,0,1,0">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ocultar barra" Click="ToggleBar_Click"/>
                            <MenuItem Header="Configuración" Click="OpenSettings_Click"/>
                            <MenuItem Header="Close" Click="Exit_Click"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                            x:Name="Notifications"
                            Padding="2"
                            Grid.Row="0"
                            Grid.Column="0"
                            BorderBrush="DarkGray"
                            Height="18"
                            Width="18"
                            BorderThickness="0.2"
                            CornerRadius="4"
                            Background="Black"
                        >
                        <ContentControl Content="{StaticResource Notification}" />
                    </Border>
                        <Border
                            Cursor="Hand"
                            x:Name="Configuration"
                        Padding="2"
                        Grid.Row="0"
                        Grid.Column="1"
                        BorderBrush="DarkGray"
                        Height="18"
                        Width="18"
                        BorderThickness="0.2"
                        CornerRadius="4"
                        Background="Black"
                        MouseLeftButtonUp="OpenSettings_Click"
                            
                        >
                        <ContentControl Content="{StaticResource SettingsIcon}" />
                    </Border>
                    <Border
                        x:Name="System_Tray"
                        Grid.Row="0"
                        Padding="2"
                        Grid.Column="2"
                        BorderBrush="DarkGray"
                        Height="18"
                        Width="18"
                        BorderThickness="0.2"
                        CornerRadius="4"
                        Background="Black"
                        MouseLeftButtonUp="OpenSettings_Click"
                        >
                        <ContentControl Content="{StaticResource SystemTray}" />
                    </Border>

                    <Border
                        x:Name="Time_Day"
                         Margin="1"
                         Grid.Row="1"
                         Grid.Column="0"
                         Grid.ColumnSpan="3"
                         BorderBrush="DarkGray"
                         Height="16"
                         Width="64"
                         BorderThickness="0.2"
                         CornerRadius="4"
                         Background="Black"
 >
                        <TextBlock x:Name="ClockText" Foreground="White" FontSize="10" HorizontalAlignment="Center"/>
                    </Border>
                    <Border
                      x:Name="Battery"
                      Grid.Row="2"
                      Grid.Column="0"
                      Margin="1"
                      Grid.ColumnSpan="3"
                      BorderBrush="DarkGray"
                      Height="16"
                      Width="64"
                      BorderThickness="0.2"
                      CornerRadius="4"
                      Background="Black"
                    >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="BatteryPercentText" 
                   Text="%" 
                   Foreground="White" 
                   FontSize="10" 
                   VerticalAlignment="Center"
                   Margin="0,0,4,0"/>
                            <ContentControl x:Name="BatteryIconControl" Content="{StaticResource Battery}"/>
                        </StackPanel>
                    </Border>

                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>