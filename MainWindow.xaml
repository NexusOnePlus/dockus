<Window x:Class="dockus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:local="clr-namespace:dockus"
        xmlns:converters="clr-namespace:dockus.Core.Converters"
        xmlns:core="clr-namespace:dockus.Core.Models"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        WindowStyle="None"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Dockus" 
        Height="80"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SizeChanged="Window_SizeChanged"
        SourceInitialized="Window_SourceInitialized"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        ShowInTaskbar="False"
        >

    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        CornerRadius="4"
                        Padding="8,4"
                        SnapsToDevicePixels="True">
                            <ContentPresenter
                        ContentSource="Header"
                        RecognizesAccessKey="True"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="4,0,4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#333"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#777"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>





        <Style TargetType="ContextMenu">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="#CC1E1E1E"
                            CornerRadius="6"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="4"
                                >
                            <StackPanel IsItemsHost="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        

        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <converters:MultiBoolToVisibilityConverter x:Key="MultiBoolToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
    </Window.Resources>

    <Border x:Name="MainBorder" BorderBrush="#FF4A4A4A" BorderThickness="1" CornerRadius="24" Padding="15,5"
            Background="{Binding Source={x:Static core:AppSettings.Current}, Path=DockBackground, Converter={StaticResource ColorToBrushConverter}}"
            >
        <ScrollViewer Margin="0,4,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center">
            <StackPanel Orientation="Horizontal">

                <ItemsControl ItemsSource="{Binding PinnedItems}"
                              dd:DragDrop.IsDragSource="True"
                              dd:DragDrop.IsDropTarget="True"
                              dd:DragDrop.UseDefaultDragAdorner="True"
                              dd:DragDrop.DropHandler="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                                
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Width="56" Height="56" Background="#AA292929" CornerRadius="10" Margin="3,0">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem 
                                                Foreground="White"
                                                Header="Anclar a la barra" Click="Pin_Click" Visibility="{Binding IsPinned, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <MenuItem
                                                Foreground="White"
                                                Header="Desanclar de la barra" Click="Unpin_Click" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Image Width="42" Height="42" Source="{Binding Icon}" Cursor="Hand"
                                       MouseLeftButtonUp="Icon_MouseLeftButtonDown"
                                       VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image.ToolTip>
                                        <ToolTip Content="{Binding Title}" />
                                    </Image.ToolTip>
                                </Image>
                            </Border>
                                <Rectangle 
                                    Grid.Row="1"
                                    Width="12" Height="3" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                           Margin="2,2,2,2" 
                                           RadiusX="2" RadiusY="2">
                                    <Rectangle.Fill>
                                        <Binding Path="IsRunning" Converter="{StaticResource BoolToBrushConverter}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Width="6" Margin="8,16" CornerRadius="2" Background="#262626" BorderThickness="1,0,1,0">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ocultar barra" Click="ToggleBar_Click"/>
                            <MenuItem Header="Configuración" Click="OpenSettings_Click"/>
                            <MenuItem Header="Close" Click="Exit_Click"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>

                <ItemsControl ItemsSource="{Binding ActiveUnpinnedItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Width="56" Height="56" Background="#AA292929" CornerRadius="10" Margin="3,0">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                                Foreground="White"
                                                Header="Anclar a la barra" Click="Pin_Click" Visibility="{Binding IsPinned, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <MenuItem 
                                                Foreground="White"

                                                Header="Desanclar de la barra" Click="Unpin_Click" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>

                                    <Image Width="42" Height="42" Source="{Binding Icon}" Cursor="Hand"
                                       MouseLeftButtonDown="Icon_MouseLeftButtonDown"
                                       VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image.ToolTip>
                                        <ToolTip Content="{Binding Title}" />
                                    </Image.ToolTip>
                                </Image>
                                </Border>
                                <Rectangle 
                                    Grid.Row="1"
                                    Width="12" Height="3" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                           Margin="2,2,2,2"
                                           RadiusX="2" RadiusY="2">
                                    <Rectangle.Fill>
                                        <Binding Path="IsRunning" Converter="{StaticResource BoolToBrushConverter}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Width="6" Margin="8,16" CornerRadius="2" Background="#262626" BorderThickness="1,0,1,0">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ocultar barra" Click="ToggleBar_Click"/>
                            <MenuItem Header="Configuración" Click="OpenSettings_Click"/>
                            <MenuItem Header="Close" Click="Exit_Click"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                            x:Name="Notifications"
                            Padding="3"
                            Grid.Row="0"
                            Grid.Column="0"
                            BorderBrush="DarkGray"
                            Height="18"
                            Width="18"
                            BorderThickness="0.2"
                            CornerRadius="4"
                            Background="Black"
                            Cursor="Hand"
                            MouseLeftButtonUp="Notifications_MouseLeftButtonUp"
                        >
                        <ContentControl Content="{StaticResource Notification}" />
                    </Border>
                        <Border
                            Cursor="Hand"
                            x:Name="Configuration"
                        Padding="3"
                        Grid.Row="0"
                        Grid.Column="1"
                        BorderBrush="DarkGray"
                        Height="18"
                        Width="18"
                        BorderThickness="0.2"
                        CornerRadius="4"
                        Background="Black"
                        MouseLeftButtonUp="OpenSettings_Click"
                            
                        >
                        <ContentControl Content="{StaticResource SettingsIcon}" />
                    </Border>
                    <Border
                        x:Name="System_Tray"
                        Grid.Row="0"
                        Padding="3"
                        Grid.Column="2"
                        BorderBrush="DarkGray"
                        Height="18"
                        Width="18"
                        BorderThickness="0.2"
                        CornerRadius="4"
                        Background="Black"
                        MouseLeftButtonUp="System_Tray_MouseLeftButtonUp"
                        Cursor="Hand"
                        >
                        <ContentControl Content="{StaticResource SystemTray}" />
                    </Border>

                    <Border
                        x:Name="Time_Day"
                         Margin="1"
                         Grid.Row="1"
                         Grid.Column="0"
                         Grid.ColumnSpan="3"
                         BorderBrush="DarkGray"
                         Height="16"
                         Width="64"
                         BorderThickness="0.2"
                         CornerRadius="4"
                         Background="Black"
 >
                        <TextBlock x:Name="ClockText" Foreground="White" FontSize="10" HorizontalAlignment="Center"/>
                    </Border>
                    <Border
                      x:Name="Battery"
                      Grid.Row="2"
                      Grid.Column="0"
                      Margin="1"
                      Grid.ColumnSpan="3"
                      BorderBrush="DarkGray"
                      Height="16"
                      Width="64"
                      BorderThickness="0.2"
                      CornerRadius="4"
                      Background="Black"
                    >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="BatteryPercentText" 
                   Text="%" 
                   Foreground="White" 
                   FontSize="10" 
                   VerticalAlignment="Center"
                   Margin="0,0,4,0"/>
                            <ContentControl x:Name="BatteryIconControl" Content="{StaticResource Battery}"/>
                        </StackPanel>
                    </Border>

                </Grid>
                <Popup x:Name="TrayPopup"
       PlacementTarget="{Binding ElementName=System_Tray}"
       Placement="Top"
       VerticalOffset="-10"
       StaysOpen="False"
       AllowsTransparency="True"
       PopupAnimation="Slide">
                    <Border Background="#CC1E1E1E"
            CornerRadius="6"
            BorderBrush="Gray"
            BorderThickness="1"
            Padding="8">
                        <StackPanel>
                            <TextBlock Text="System Tray"
                       Foreground="White"
                       FontSize="12"/>
                            <TextBlock Text="Still in development"
                       Foreground="LightGray"
                       FontSize="10"/>
                        </StackPanel>
                    </Border>
                </Popup>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>